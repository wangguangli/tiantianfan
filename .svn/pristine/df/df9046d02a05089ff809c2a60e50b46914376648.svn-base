<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<title>个人信息</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
	<meta name="apple-mobile-web-app-capable" content="yes">
	<meta name="apple-mobile-web-app-status-bar-style" content="black">
	<link rel="stylesheet" href="__PUBLIC__/css/mui.min.css">
	<link rel="stylesheet" href="__PUBLIC__/css/bank_card.css">
	<script src="__PUBLIC__/layer/mobile/layer.js"></script>
</head>
<body style="background: #efeff4;">
<header class="mui-bar mui-bar-nav" style="background: #fff;">
	<a href="javascript:history.back();" class="mui-pull-left mui-icon mui_turn"><img src="__PUBLIC__/img/return4.png" width="20vw"height="20vw"/></a>
	<h1 class="mui-title tit_login" style="color: #333;font-size: 4vw;">个人信息</h1>
</header>
<div class="mui-content" style="background: #fff;">
	<input type="hidden"  id="img" name="img" value='' />
	<div class="head">
		<div class="account">
			<img src="{$userInfo.headimgurl}" width="100%"height="100%"style="border-radius: 50%;"id="add_img"/>
			<input type="file"  id="file_dd" class="file" value="" name="headimg" accept="image/jpg,image/jpeg,image/png,image/bmp" multiple="" onchange="submit_img();" style="left:0" />
		</div>
		<h4>更换头像</h4>
		<h5>更换后请点击提交</h5>
	</div>
	<div class="account_head">
		<ul>
			<li class="clearfix">
				<div class="trans">账号</div>
				<p>{$userInfo.phone}</p>
			</li>
			<li class="clearfix">
				<div class="trans">类别</div>
				<p>{$userInfo['level_name']}</p>
			</li>
			<li class="clearfix">
				<div class="trans">昵称</div>

				<input type="text" style="text-align: right" name="name" id="user_name" value="{$userInfo.nickname}" placeholder="请输入昵称" class="trans_change" />
			</li>
		</ul>
	</div>
</div>
<div class="button"><input type="submit" value="提交" class="sub_but" onclick="editInfo()" /></div>
<script src="__PUBLIC__/js/jquery-1.11.1.min.js"></script>
<script type="text/javascript">
	//上传单张图片
	function submit_img(){
		var fileSize = 0;
		var fileMaxSize = 1024;//1M
		var formData = new FormData();
		console.log(formData)
		var img = document.getElementById('file_dd').files[0];
		console.log(document.getElementById('file_dd').files[0]);
		if(img){
			fileSize =img.size;
			var size = fileSize / 1024;
			if (size > fileMaxSize) {
				layer.open({
					content: "文件大小不能大于1M！"
					,skin: 'msg'
					,time: 2
				});
				filePath = "";
				return false;
			}else if (size <= 0) {
				layer.open({
					content: "文件大小不能为0M！"
					,skin: 'msg'
					,time: 2
				});
				filePath = "";

			}
		}
		formData.append("images", img);
		formData.append("case", 'images');
		$.ajax({
			url: "{:U('M/Index/upload_image')}",
			type: 'post',
			async: false,
			data: formData,
			contentType: false,
			processData: false,
			dataType: 'json',
			success: function(res) {
				console.log(res)
				if(res.msg == 'ok') {
					var img = res.result.img;
					console.log(img)
					$('input[name="img"]').val(img)
					$('#add_img').attr('src',img);
				} else {
					layer.open({
						content: res.msg
						,skin: 'msg'
						,time: 2
					});
				}
			},
			error: function() {
				layer.open({
					content: "发送失败"
					,skin: 'msg'
					,time: 2
				});
			}
		});
	}
	function editInfo() {
		var img = $("#img").val();//图片
		console.log(img);
		var user_id = "{$userInfo.id}";
		var user_name = $("#user_name").val();
		$.ajax({
			type : "POST",
			dataType: "json",
			url: "{:U('User/editInfo')}",
			data : {img:img,user_id:user_id,user_name :user_name},
			success:function (data) {
				if(data.status==0){
					layer.open({
						content: data.msg
						,skin: 'msg'
						,time: 1
					});
					location.href = "{:U('User/index')}";
				}else{
					layer.open({
						content: data.msg
						,skin: 'msg'
						,time: 1
					});
				}
			}
		});
	}
</script>
</body>
</html>
