<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<!--<meta name="viewport" content="width=device-width, initial-scale=1">-->
	<title>{:GC('web_title')}管理后台</title>
	<include file="Public/asset_top_page"/>
</head>
<body>
<!-- header -->
<include file="Public/header"/>
<!-- /header -->
<!-- Page container -->
<div class="page-container">
	<!-- Page content -->
	<div class="page-content">
		<!-- main sidebar -->
		<include file="Public/left"/>
		<!-- /main sidebar -->

		<!-- Main content -->
		<div class="content-wrapper">

			<!-- Content area -->
			<div class="content" style="padding-top: 10px;">
				<!-- Pagination types -->
				<div class="v-container">

					<!-- page -->
					<form class="form-horizontal pt-15" method="post" action="">
						<input type="hidden" class="form-control" name="id" value="{$data.id}">


						<div class="form-group">
							<label class="col-xs-2 control-label text-right">行业名称</label>
							<div class="col-xs-5">
								<input type="text" class="form-control" placeholder="请输入行业名称" name="name" value="{$data.name}" required>
							</div>
						</div>



						<div class="form-group">
							<label class="col-xs-2 control-label text-right">图标</label>
							<div class="col-xs-5 control-label">
								<div class="placeholder">
									<img src="{$data.icon}" class="img_headimgurl">
								</div>
								<button type="button" class="layui-btn layui-btn-sm" id="upimg">
									<i class="layui-icon">&#xe67c;</i>上传图片
								</button>

								<input type="hidden" name="icon" class="headimgurl"  value="">
							</div>
						</div>
						<script>
							layui.use('upload', function(){
								var upload = layui.upload;

								//执行实例
								var uploadInst = upload.render({
									elem: '#upimg' 							//绑定元素
									,url: '/index.php/Admin/Common/uploads' 	//上传接口
									,data:{handlename:"icon"}			// 接口接收值
									,field:"icon"						// input name，与接口接收值 一致
									,done: function(res)
									{
										//上传完毕回调-不一定成功，需要判断
										console.log(res);
										if (res.status > 0)
										{
											// 异常提示
											layer.alert(res.result);
										}
										else
										{
											$(".headimgurl").val(res.result);
											$(".img_headimgurl").attr("src", res.result);
										}
									}
									,error: function(e)
									{
										//请求异常回调
										console.log(e);
									}
								});
							});
						</script>




						<div class="form-group">
							<label class="col-xs-2 control-label"></label>
							<div class="col-xs-8">
								<button class="layui-btn layui-btn-sm layui-btn-normal" type="submit">提交</button>
								<a href="javascript:history.go(-1);" class="layui-btn layui-btn-sm layui-btn-primary">返回</a>
							</div>
						</div>
					</form>

					<!-- page end -->

					<!-- Footer -->
					<include file="Public/footer" />
					<!-- /footer -->

				</div>
				<!-- /content area -->

			</div>
			<!-- /main content -->

		</div>
		<!-- /page content -->

	</div>
	<!-- /page container -->



</body>
</html>