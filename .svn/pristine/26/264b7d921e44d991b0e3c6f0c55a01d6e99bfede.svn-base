html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed,
figure, figcaption, footer, header, hgroup,
menu, nav, output, ruby, section, summary,
time, mark, audio, video {
  margin: 0;
  padding: 0;
  border: 0;
  font-size: 100%;
  font: inherit;
  vertical-align: baseline;
  box-sizing: border-box;
  text-decoration: none;
  list-style: none;
  
}
small { font-size: 12px; } /* 小于 12px 的中文很难阅读，让 small 正常化 */
*{
  padding: 0;
  margin: 0;
  
}
img{width:100%}
a{text-decoration: none;color: black}
a:hover{color: black}
ul{list-style: none}
.fl{float:left}
.fr{float:right}
.clear{clear:both}
.tal{text-align: left;}
.tac{text-align: center;}
.tar{text-align: right;}


.detail-header{
	width: 100%;
	height: 55vw;
}
.detail-header img{
	width: 100%;
	height: 55vw;
}
.live-title{
	width: 100%;
	padding: 2vw 0 3vw;
	border-bottom:2vw solid #eeeeee ;
}
.live-title h2{
	font-size: 3.8vw;
	padding:2vw 3%;
	font-weight: 400;
	
}
.live-tage{
	width: 94%;
	margin: 0 auto;
	padding:2vw 0;
}
.live-tage p{
	width: 50%;
	float: left;
	font-size: 3vw;
	line-height: 6vw;
	color: #999;
}
.live-tage p img{
	height: 3vw;
}
.live-tage p span{
	font-size: 3vw;
	color: #999;
}
.live-content{
	width: 100%;
	padding-bottom: 12vw;
	
}
.live-intro{
	width: 100%;
	padding:0  3% ;
	font-size: 3.5vw;
	font-weight: 300;
	line-height: 11vw;
	height: 11vw;
	border-bottom:1px solid #eeeeee;
	
}
.live-intro p{
	float: left;
	border-bottom:.5vw solid red;
}
.live-text{
	padding: 3vw 3%;
	font-size: 3.5vw;
	line-height: 8vw;
	color: #999;
}
.live-count{
	width: 100%;
	color: white;
	background: red;
	font-size: 4vw;
	line-height: 12vw;
	height: 12vw;
	text-align: center;
	position: fixed;
	bottom: 0;
	right: 0;
	padding:0 2vw;
	display:flex;
	align-items:center;
}
.time-div{width:50%; float:left; background:red; line-height:12vw; height:12vw; color:#fff; font-size:3.5vw; border-radius:5px }
.but-div{width:24.5%; padding:.5vw; float:right;}
.but-divl{width:100%; margin:0 auto; display:table;}
.but-div a{border:1px solid #e9e9e9; border-radius:5px; margin-top:1vw; color:#555; background:#fff; width:100%; line-height:8vw; height:8vw; font-size:3.8vw; display:inline-block;}
.but-divl a{color:#555; width:100%; color:#fff; line-height:12vw; height:12vw; font-size:4vw; display:inline-block;}
.but-div a:hover{color:#555 !important;}
a,a:hover{
	color: white;
}
.cd-popup {
    position: fixed;
    left: 0;
    top: 0;
    height: 100%;
    width: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    opacity: 0;
    visibility: hidden;
    -webkit-transition: opacity 0.3s 0s, visibility 0s 0.3s;
    -moz-transition: opacity 0.3s 0s, visibility 0s 0.3s;
    transition: opacity 0.3s 0s, visibility 0s 0.3s;
    z-index:9999;
}
.cd-popup.is-visible {
    opacity: 1;
    visibility: visible;
    -webkit-transition: opacity 0.3s 0s, visibility 0s 0s;
    -moz-transition: opacity 0.3s 0s, visibility 0s 0s;
    transition: opacity 0.3s 0s, visibility 0s 0s;
}
.cd-popup-container {
    position: absolute;
    width:70%;
    left:50%;
	top:50%;
	margin-left:-35%;
	margin-top:-17vw;
    height:34vw;
    background: #FFF;
    border-radius: 5px;
    text-align: center;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
    -webkit-transform:scale(1.2);
    -moz-transform:scale(1.2);
    -ms-transform:scale(1.2);
    -o-transform:scale(1.2);
    transform:scale(1.2);
    -webkit-backface-visibility: hidden;
    -webkit-transition-property: -webkit-transform;
    -moz-transition-property: -moz-transform;
    transition-property: transform;
    -webkit-transition-duration: 0.3s;
    -moz-transition-duration: 0.3s;
    -ms-transition-duration: 0.3s;
    -o-transition-duration: 0.3s;
    transition-duration: 0.3s;
	box-sizing:border-box;
	padding:3.5vw 3vw 0 3vw;
	z-index:9999
}
.cd-popup-container p{text-align:center; font-size:4vw;  }
.cd-input{width:100%; display:table;padding:3vw 0; text-align:center}
.cd-input input{ width:90%; background:#f0f0f0; padding:2vw; -webkit-appearance:none; border-radius:3px; box-sizing:border-box; border:1px solid #e1e1e1; }
.is-visible .cd-popup-container {-webkit-transform:scale(1); -moz-transform:scale(1); -ms-transform:scale(1); -o-transform:scale(1); transform:scale(1);}
.cd-popup-container .cd-buttons{width:100%; position:absolute; bottom:1px; left:0; height:9.5vw; border-top:1px solid #e1e1e1}
.cd-popup-container .cd-buttons button{border:0; line-height:9.5vw; font-size:3.5vw; -webkit-appearance:none; background:#fff; color:#f93d3a; }
.cd-popup-container .cd-buttons a{width:50%; line-height:9.5vw; float:left; text-align:center; color:#999; border-right:1px solid #e1e1e1; font-size:3.5vw}
