<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<!--<meta name="viewport" content="width=device-width, initial-scale=1">-->
	<title>{:GC('web_title')}管理后台</title>
	<include file="Public/asset_top_page"/>
</head>
<body>
<!-- header -->
<include file="Public/header"/>
<!-- /header -->
<!-- Page container -->
<div class="page-container">
	<!-- Page content -->
	<div class="page-content">
		<!-- main sidebar -->
		<include file="Public/left"/>
		<!-- /main sidebar -->

		<!-- Main content -->
		<div class="content-wrapper">

			<!-- Content area -->
			<div class="content" style="padding-top: 10px;">
				<!-- Pagination types -->
				<div class="v-container">

					<!-- page -->
					<form class="form-horizontal pt-15" method="post" action="">
						<input type="hidden" class="form-control" name="id" value="{$data.id}">
						<div class="form-group">
							<label class="col-xs-2 control-label text-right">名称</label>
							<div class="col-xs-5">
								<input type="text" class="form-control" name="name" value="{$data.name}" placeholder="请输入名称"  d>
							</div>
						</div>

						<div class="form-group">
							<label class="col-xs-2 control-label text-right">优惠金额（元）</label>
							<div class="col-xs-5">
								<input type="text" class="form-control" name="money" value="{$data.money}" placeholder="请输入优惠金额"  d>
							</div>
						</div>

						<div class="form-group">
							<label class="col-xs-2 control-label text-right">优惠条件金额（元）</label>
							<div class="col-xs-5">
								<input type="text" class="form-control"  name="conditions" value="{$data.conditions}" placeholder="请输入优惠条件金额"  d>
							</div>
						</div>

						<div class="form-group">
							<label class="col-xs-2 control-label text-right">发放数量</label>
							<div class="col-xs-5">
								<input type="text" class="form-control" name="send_num" value="{$data.send_num}" placeholder="请输入发放数量"  d>
							</div>
						</div>

						<div class="form-group">
							<label class="col-xs-2 control-label text-right">领取数量</label>
							<div class="col-xs-5">
								<input type="text" class="form-control" name="get_num" value="{$data.get_num}" readonly placeholder="请输入领取数量"  d>
							</div>
						</div>

						<div class="form-group">
							<label class="col-xs-2 control-label text-right">使用数量</label>
							<div class="col-xs-5">
								<input type="text" class="form-control" name="use_num" value="{$data.use_num}" readonly placeholder="请输入使用数量" d>
							</div>
						</div>

						<div class="form-group">
							<label class="col-xs-2 control-label text-right">有效时间类型</label>
							<div class="col-xs-5">
								<label class="radio-inline">
									<input type="radio" class="styled" name="start_type" value="0" <if condition="$data['start_type'] eq 0">checked</if> >开始-结束时间
								</label>
								<label class="radio-inline">
									<input type="radio" class="styled" name="start_type" value="1" <if condition="$data['start_type'] eq 1">checked</if> >按领取后计算天数
								</label>

							</div>
						</div>

						<div class="form-group">
							<label class="col-xs-2 control-label text-right">开始时间</label>
							<div class="col-xs-5">
								<input type="text" class="form-control" id="use_start_time" name="use_start_time" value="{$data.use_start_time|date='Y-m-d H:i:s',###}" placeholder="请选择开始时间"  d>
							</div>
						</div>


						<div class="form-group use_end_time" <if condition="$data['start_type'] eq 1 "> style="display:none;" </if> >
							<label class="col-xs-2 control-label text-right">结束时间</label>
							<div class="col-xs-5">
								<input type="text" class="form-control" id="use_end_time" name="use_end_time" value="{$data.use_end_time|date='Y-m-d H:i:s',###}" placeholder="请选择结束时间"  d>
							</div>
						</div>

						<div class="form-group use_days" <if condition="$data['start_type'] eq 0"> style="display:none;" </if>>
							<label class="col-xs-2 control-label text-right">有效天数</label>
							<div class="col-xs-5">
								<input type="text" class="form-control" name="use_days" value="{$data.use_days}" placeholder="请输入有效天数" >
							</div>
						</div>

						<div class="form-group">
							<label class="col-xs-2 control-label text-right">红包类型</label>
							<div class="col-xs-5">
								<label class="radio-inline">
									<input type="radio" class="styled" name="type" value="1" <if condition="$data['type'] eq 1">checked</if> >平台满减优惠券
								</label>
								<label class="radio-inline">
									<input type="radio" class="styled" name="type" value="2" <if condition="$data['type'] eq 2">checked</if> >平台立减优惠券
								</label>
								<label class="radio-inline">
									<input type="radio" class="styled" name="type" value="3" <if condition="$data['type'] eq 3">checked</if> >红包满减优惠券
								</label>
								<label class="radio-inline">
									<input type="radio" class="styled" name="type" value="4" <if condition="$data['type'] eq 4">checked</if> >红包立减优惠券
								</label>
							</div>
						</div>

						<div class="form-group goods_id" <if condition="$data['type'] elt 2"> style="display:none;" </if>>
							<label class="col-xs-2 control-label text-right">商品ID</label>
							<div class="col-xs-5">
								<input type="text" class="form-control" name="goods_id" value="{$data.goods_id}" placeholder="请输入商品ID"  d>
							</div>
						</div>


						<div class="form-group shop_id" <if condition="$data['type'] elt 2"> style="display:none;" </if>>
							<label class="col-xs-2 control-label text-right">商家ID</label>
							<div class="col-xs-5">
								<input type="text" class="form-control" name="shop_id" value="{$data.shop_id}" placeholder="请输入商家ID"  d>
							</div>
						</div>

						<div class="form-group">
							<label class="col-xs-2 control-label text-right">是否新用户专用</label>
							<div class="col-xs-5">
								<label class="radio-inline">
									<input type="radio" class="styled" name="to_new_user" value="0" <if condition="$data['to_new_user'] eq 0">checked</if> >否
								</label>
								<label class="radio-inline">
									<input type="radio" class="styled" name="to_new_user" value="1" <if condition="$data['to_new_user'] eq 1">checked</if> >是
								</label>

							</div>
						</div>

						<div class="form-group">
							<label class="col-xs-2 control-label text-right">是否可同时使用</label>
							<div class="col-xs-5">
								<label class="radio-inline">
									<input type="radio" class="styled"  name="same_time" value="0" <if condition="$data['same_time'] eq 0">checked</if> >否
								</label>
								<label class="radio-inline">
									<input type="radio" class="styled" name="same_time" value="1" <if condition="$data['same_time'] eq 1">checked</if> >是
								</label>

							</div>
						</div>

						<div class="form-group">
							<label class="col-xs-2 control-label text-right">状态</label>
							<div class="col-xs-5">
								<label class="radio-inline">
									<input type="radio" class="styled"  name="status" value="0" <if condition="$data['status'] eq 0">checked</if> >关闭
								</label>
								<label class="radio-inline">
									<input type="radio" class="styled" name="status" value="1" <if condition="$data['status'] eq 1">checked</if> >开启
								</label>

							</div>
						</div>

						<div class="form-group">
							<label class="col-xs-2 control-label"></label>
							<div class="col-xs-8">
								<button class="layui-btn layui-btn-sm layui-btn-normal" type="submit">提交</button>
								<a href="javascript:history.go(-1);" class="layui-btn layui-btn-sm layui-btn-primary">返回</a>
							</div>
						</div>
					</form>

					<!-- page end -->

					<!-- Footer -->
					<include file="Public/footer" />
					<!-- /footer -->

				</div>
				<!-- /content area -->

			</div>
			<!-- /main content -->

		</div>
		<!-- /page content -->

	</div>
	<!-- /page container -->

	<!-- 上传图片 -->
<script>

	$("input[name=start_type]").on("click", function(){
		var kv = $(this).val();
		if (kv == 1)
		{
			// 选择 则显示
			$(".use_days").show("fast");
			$(".use_end_time").hide("fast");
		}
		else
		{
			// 不选择 则隐藏
			$(".use_days").hide("fast");
			$(".use_end_time").show("fast");
		}
	});

	$("input[name=type]").on("click", function(){
		var kv = $(this).val();
		console.log(kv)
		if (kv == 1 || kv == 2)
		{
			// 选择 则显示
			$(".shop_id").hide("fast");
			$(".goods_id").hide("fast");
		}
		else
		{
			// 不选择 则隐藏
			$(".shop_id").show("fast");
			$(".goods_id").show("fast");
		}
	});

	laydate.render({
		elem: '#use_start_time',
		type: 'datetime'
	});
	laydate.render({
		elem: '#use_end_time',
		type: 'datetime'
	});

</script>
	<!-- 上传图片 -->

</body>
</html>