html,body{min-height:100%;font-size:0.9em;}
body{margin:0px; padding:0px; font-family:"Microsoft YaHei","simsun","Helvetica Neue", Arial, Helvetica, sans-serif; font-size:0.9em;color:#333;}
a:hover{text-decoration:none;}
a{color:#666;text-decoration:none;}
img{border:0}
ul{width:100%;padding: 0;margin: 0;}
ul,li{list-style:none}
ul,li,div{box-sizing:border-box}
/*清理浮动的方法*/
.clearfix:after {content: " ";display: block;clear: both;height: 0;}
.clearfix {zoom: 1;}
/**********************************************************我的收藏******************************************************************/
.collect_shop{width: 100%;background: #fff;}
/*.collect_shop ul{}*/
.collect_shop ul li{width: calc(100% / 2);color: #000;font-size: 4vw;float: left;text-align: center;padding: 3vw 0;}
.collect_shop ul li.active{color: #FE274E;border-bottom: 2px solid #FE274E;}


.shop_chant{padding: 0 2.5vw;background: #fff;margin-top: 2vw;}
.shop_chant ul li{width: 49%;float: left;padding:0.2vw 0 2vw 0;}
.shop_chant ul li:nth-child(2n){float: right;}
.shop_chant ul li .chant_img{width: 100%;height:47vw;}
.shop_chant ul li p{color:#6C6C6C;font-size:3.5vw; overflow: hidden;white-space: nowrap;text-overflow: ellipsis;margin: 0;padding: 2vw 0;border-bottom: 1px solid #eee;}
.price{display: flex;justify-content: space-between;color: #FE274E;font-size: 3.5vw;padding-top:2vw;}


.section_near_product .ul_near_product{width: 100%;}
.section_near_product .ul_near_product li{width:95%;margin: 2vw auto;padding: 2vw 0;background: white;position:relative; }
.section_near_product .ul_near_product li img.product{width: 25vw;height: 25vw;float: left;}
.section_near_product .ul_near_product li .div_product_info{width: 55%;float: left;margin-left:3vw;padding-top: 4vw;}
.div_product_info h5.good_name{font-size: 4vw;line-height: 6vw;color:#404040;font-weight:500;overflow:hidden;white-space:nowrap; text-overflow:ellipsis;}
.div_product_info h5.good_name font{background:#ea2244;color: white;border-radius: 5px;font-size: 12px;font-weight: 300;padding: 0 3px; }
.div_product_info p.address{font-size: 3.5vw;color: #888; background-repeat: no-repeat;background-position: 0 center ;background-size: 3.5vw 4vw;line-height: 8vw;overflow:hidden;white-space:nowrap; text-overflow:ellipsis;}
.section_near_product .more{width: 100%;height:11vw;color: #646464;line-height: 10vw;text-align: center;font-size: 4vw;font-weight: 300; }
