			// 请求商品规格的价格

			var key = gspArr.join('_');
			var arr = {goods_id: goods_id, key: key};
			$("input[name='goods_kind']").val(goods_kind);

			$.ajax({
				type: 'POST',
				url: "{:U('M/Goods/get_spec_goods_price')}",
