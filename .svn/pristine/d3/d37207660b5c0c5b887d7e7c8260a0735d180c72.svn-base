			type: "POST",
			url: "/index.php/Api/Goodsout/goods_poster",
			data: {"goods_id": gid, "user_id": uid, "price": price, "goods_kind": gkind},
			dataType: "json",
			success: function (data) {
				if (data.status == "0") {
					var img = "<img style='width:300px;' src='" + 'http://' + pwd_url + '/' + data.result + "' /><div>";
					layer.open({
						content: img,
						btn: '关闭',
						shadeClose: false,
					});
					$("#shareModal").css('display', 'none');
					$(".gbfx").click(function () {
						layer.close(layer.index);
					})
				} else {
					layer.open({
						content: data.msg
						, skin: 'msg'
						, time: 2
					});
				}
			}
		})
	}

	function sortNumber(a, b) {
		return a - b;
	}

	$(function () {
		// 打开服务明细
		$(".open_serviceList").on("click", function () {
			$("#serviceList").popup();
		});

		// 商品详情和成效记录切换
		$(".deta_title").on("click", function () {
			var dt = $(this).data("dt");
			$(this).addClass("active").siblings(".deta_title").removeClass("active");
			if (dt == 2) {
				$(".buyers").show("fast");
				$(".clinch_ul").show("fast");
				$(".goods_concent").hide("fast");
			} else {
				$(".buyers").hide("fast");
				$(".clinch_ul").hide("fast");
				$(".goods_concent").show("fast");
			}
		});

		// 取消/关注 店铺
		$(".follow_shop").on("click", function () {
			var that = $(this);
			var fs = that.attr("data-fs");
			console.log(fs)
			var user_id = "{$user_id}";
			var shop_id = $('#saveShop').val();
			if (fs == 1) {
				// 关注店铺
				$.ajax({
					type: 'POST',
					data: {"fav_id": shop_id, "type": 2, "user_id": user_id},
					url: "{:U('Api/Favoritesin/addFavorites')}",
					dataType: 'json',
					success: function (data) {
						if (data.status == 0) {
							layer.open({
								content: "操作成功",
								skin: 'msg',
								time: 1
							});
							that.text("已关注");
							that.attr("data-fs", 0);
						} else {
							layer.open({
								content: data.msg,
								skin: 'msg',
								time: 1
							});
						}
						return false;
					}
				});
			} else {
				$.ajax({
					type: 'POST',
					data: {"id": shop_id, "type": 2, "user_id": user_id},
					url: "{:U('Api/Favoritesin/deleteFavorites')}",
					dataType: 'json',
					success: function (data) {
						if (data.status == 0) {
							layer.open({
								content: "操作成功",
								skin: 'msg',
								time: 1
							});
							that.text("关注店铺");
							that.attr("data-fs", 1);
						} else {
							layer.open({
								content: "操作失败",
								skin: 'msg',
								time: 1
							});
						}
						return false;
					}
				});
			}


		});

		// 打开商品橱窗
		$(".goods_mini_window").on("click", function () {
			$("#goods_mini_window").popup();
		});

		$(document).scroll(function () {
			var scroH = $(document).scrollTop();  //滚动高度
			if (scroH > 160) {
				$(".goods_nav_wrap").fadeIn();
			} else {
				$(".goods_nav_wrap").stop(true, true).fadeOut();
			}
		});

		// 自动定位相应导航
		var infoTop = $("#goods_nav_info").offset().top;
		var evalTop = $("#goods_nav_eval").offset().top-30;
		var descTop = $("#goods_nav_desc").offset().top-50;

		$(window).scroll(function () {
			var scrollHeight = $(document).scrollTop();
			if (scrollHeight < evalTop) {
				// 商品选中
				$(".goods_nav_li_1").children("a").addClass("goods_nav_a_active").parent().siblings().children("a").removeClass("goods_nav_a_active")
			} else if (scrollHeight < descTop) {
				// 评价选中
				$(".goods_nav_li_2").children("a").addClass("goods_nav_a_active").parent().siblings().children("a").removeClass("goods_nav_a_active")
			} else if (scrollHeight >= descTop) {
				// 详情选中
				$(".goods_nav_li_3").children("a").addClass("goods_nav_a_active").parent().siblings().children("a").removeClass("goods_nav_a_active")
			} else {
				// 商品选中
				$(".goods_nav_li_1").children("a").addClass("goods_nav_a_active").parent().siblings().children("a").removeClass("goods_nav_a_active")
			}
		});

		// 打开客服联系方式
		$(".customer_service").on("click", function () {
			$("#customer_service").popup();
		});


		// 复制QQ、微信
		$(".icopy").click(function () {
			var clipboard = new ClipboardJS('.icopy');
			clipboard.on('success', function (e) {
				layer.open({
					content: "复制成功"
					, skin: 'msg'
					, time: 2
				});
			});
			clipboard.on('error', function (e) {
				layer.open({
					content: "复制失败,请手动复制"
					, skin: 'msg'
					, time: 2
				});
			});
		});

	})

	// 左上角成交记录文字滚动
	jQuery(".txtScroll-top").slide({
		mainCell: ".list_wrap ul",
		autoPage: true,
		effect: "topLoop",
		autoPlay: true,
		vis: 1
	});


	//交易记录查看更多
	function goodsPayList() {

		//直接访问第二页
		var goods_id="{$goods.id}";
		var page = $('#page').val();
		var nextPage =  parseInt(page) +1;

		//页码从第二页开始
		$.ajax({
			type: 'POST',
			data: {"page": nextPage, "goods_id": goods_id},
			url: "{:U('Goods/goodsPayList')}",
			dataType: 'json',
			success: function (data) {
				if (data.status == 0) {
					//将页码进行渲染

					var html = '';
					$.each(data.result.list, function (index, item) {
						html += '<div class="clinch_li">';
						html += '<div class="buy_li buy_title_1">'+item.buyer_name+'</div>';
						html += '<div class="buy_li buy_title_2">'+item.buy_time+'</div>';
						html += '<div class="buy_li buy_title_3">'+item.num+'</div></div>';

					})
					$('#payGoodsList').append(html);
					$('#page').val(data.result.page);
					//页码渲染
				} else {
					layer.open({
						content: "没有更多记录了",
						skin: 'msg',
						time: 1
					});
				}
				return false;
			}
		});
	}
</script>
